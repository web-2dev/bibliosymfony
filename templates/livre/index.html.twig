{% extends 'base.html.twig' %}

{% block title %}Liste Livres{% endblock %}

{% block h1 %}Liste des livres{% endblock %}

{% block body %}
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Couverture</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for livre in livres %}
                <tr>
                    <td>{{ livre.id }}</td>
                    <td>
                        <img class="mini" src="{{ asset("img/" ~ livre.couverture) }}" alt="pas de couverture">
                    </td>
                    <td>{{ livre.titre }}</td>
                    <td>{{ livre.auteur }}</td>
                    <td>
                        <a href="{{ path("livre_fiche", {"id": livre.id}) }}">
                            <i class="fa fa-book"></i>
                        </a>
                        <a href="{{ path("livre_modifier", {"id": livre.id }) }}">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="{{ path("livre_supprimer", {"id": livre.id }) }}">
                            <i class="fa fa-trash"></i>
                        </a>
                        
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
